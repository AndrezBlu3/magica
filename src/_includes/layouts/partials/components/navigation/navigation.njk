{#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
<nav class="{{ params.name | lower | replace(" ", "-") }} display-flex" aria-labelledby="{{ params.name | lower | replace(" ", "-") }}">
  <h2 id="{{ params.name | lower | replace(" ", "-") }}" class="sr-only">{{ params.name | capitalize }}</h2>
  <ul class="menu__items">
    {%- for entry in collections.all | eleventyNavigation %}
      <li class="menu__item{% if entry.url == page.url %} menu__item--active{% endif %}">
        <a class="menu__link" href="{{ entry.url | url }}">{{ entry.title }}</a>
      </li>
    {%- endfor %}
    <li class="menu__item btn btn-link mr-1">
      <a class="menu__link" href="mailto:helloygoex@gmail.com">Contact</a>
    </li>
  </ul>
</nav>
