{% from "layouts/partials/components/svg-icon/macro.njk" import svgIcon %}

<footer class="footer grid mb-0">
  <div class="footer__top">
    <div class="footer__top-left mb-1">
      <a class="footer__logo home" href="{{ '/' | url }}">{{ metadata.title }}</a>
      <p>{{ metadata.title }} is maintained by {{ metadata.author.name }} as a quick start for some of her projects, but happy to share it for anyone that might find it useful. Check the repo on GitHub.</p>
      <p>This page was generated on {% today %}</p>
    </div>
    <div class="footer__top-right">
      <div class="footer__quick-links-wrapper">
        <p class="h6 mb-0-5">Quick links</p>
        <ul class="footer__quick-link-items">
          <li class="footer__quick-link-item">
            <a class="footer__link" href="{{ '/' | url }}">
              <span>Home</span></a>
          </li>
          <li class="footer__quick-link-item">
            <a class="footer__link" href="{{ '/posts' | url }}">
              <span>Blog</span></a>
          </li>
          <li class="footer__quick-link-item">
            <a class="footer__link" href="{{ '/about' | url }}">
              <span>About</span></a>
          </li>
          <li class="footer__quick-link-item">
            <a class="footer__link" href="mailto:helloygoex@gmail.com">
              <span>Contact</span></a>
          </li>
          <li class="footer__quick-link-item">
            <a class="footer__link" href="{{ '/sitemap' | url }}">
              <span>Sitemap</span></a>
          </li>
        </ul>
      </div>
      <div class="footer__contact-follow-wrapper">
        <div class="footer__contact">
          <p class="h6 text-bold mb-0-5">Contact me</p>
          <a class="footer__link" href="mailto:helloygoex@gmail.com">
            <span>helloygoex@gmail.com</span></a>
        </div>
        <div class="footer__follow">
          <p class="h6 text-bold mb-0-5">Follow me</p>
          <nav>
            <ul class="footer__social-items">
              <li class="footer__social-item">
                <a class="footer__social-link" href="https://twitter.com/ygoex">
                  {{ svgIcon({
                    svgWidth: 20,
                    svgHeight: 20,
                    ariaLabel: "Twitter icon",
                    symbolId: "icon-social-twitter",
                    screenReader: "Follow us on Twitterrrrr"
                    })
                  }}
                </a>
              </li>
              <li class="footer__social-item">
                <a class="footer__social-link" href="https://codepen.io/ygoex">
                  {{ svgIcon({
                    svgWidth: 21,
                    svgHeight: 21,
                    ariaLabel: "Codepen icon",
                    symbolId: "icon-social-codepen",
                    screenReader: "Follow me on Codepen"
                    })
                  }}
                </a>
              </li>
              <li class="footer__social-item">
                <a class="footer__social-link" href="https://dribbble.com/ygoex">
                  {{ svgIcon({
                    svgWidth: 20,
                    svgHeight: 20,
                    ariaLabel: "Dribbble icon",
                    symbolId: "icon-social-dribbble",
                    screenReader: "Follow me on Dribbble"
                    })
                  }}
                </a>
              </li>
              {# <li class="footer__social-item">
                <a class="footer__social-link" href="https://www.behance.net/ygoex">
                  {{ svgIcon({
                    svgWidth: 20,
                    svgHeight: 20,
                    ariaLabel: "Behance icon",
                    symbolId: "icon-social-behance",
                    screenReader: "Follow me on Behance"
                    })
                  }}
                </a>
              </li> #}
              <li class="footer__social-item">
                <a class="footer__social-link" href="https://www.linkedin.com/in/ygoex/">
                  {{ svgIcon({
                    svgWidth: 20,
                    svgHeight: 20,
                    ariaLabel: "LinkedIn icon",
                    symbolId: "icon-social-linkedin",
                    screenReader: "Follow me on LinkedIn"
                    })
                  }}
                </a>
              </li>
              <li class="footer__social-item">
                <a class="footer__social-link" href="{{ metadata.feed.path | url }}">
                  {{ svgIcon({
                    svgWidth: 18,
                    svgHeight: 22,
                    ariaLabel: "Rss icon",
                    symbolId: "icon-social-rss",
                    screenReader: "Subscribe to my feed."
                    })
                  }}
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <p class="footer__copyright">&copy; {% year %}
    <a class="footer__link" href="https://github.com/ygoex">
      <span>Ygoex</span></a> - Powered by <a class="footer__link" href="https://11ty.io">
      <span>Eleventy</span></a> and <a class="footer__link" href="https://www.netlify.com">
      <span>Netlify</span></a>
  </p>
</footer>
