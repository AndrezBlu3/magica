<ul class="postlist">
  {% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <a href="{{ post.url | url }}" class="postlist-link">
        <ul class="post-categories">
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <li>
                <span class="post-tag">#{{ tag }}</span>
              </li>
            {% endif %}
          {%- endfor %}
        </ul>
        {% if post.data.title %}
          <p class="post-title h4">{{ post.data.title }}</p>
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
        {% if post.data.description %}
          <p>{{ post.data.description }}</p>
        {% endif %}
        {%- if post.date %}
          <div class="date-time">
            <time class="post-date" datetime="{{ post.date | dateStringISO }}">
              {{ post.date | dateFilter }}
            </time>
            <span class="middle-dot">&middot;</span>
            <span class="read-time">{{ post | readingTime }} read</span>
          </div>
        {% endif %}
      </a>
    </li>
  {% endfor %}
</ul>
