<ul class="postlist">
  {% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.imgUrl %}
          <div class="post-image">
            <img src="{{ post.data.imgUrl | imgSize }}" alt="{{ post.data.imgAlt }}" loading="lazy" decoding="async">
          </div>
        {% else %}
          <div class="post-image">
            <img src="https://source.unsplash.com/collection/2216765/640x440/daily" alt="random" loading="lazy" decoding="async">
          </div>
        {% endif %}
        <div class="post-content">
          <ul class="post-categories">
            {% for tag in post.data.tags %}
              {%- if collections.tagList.indexOf(tag) != -1 -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <li>
                  <span class="post-tag">#{{ tag }}</span>
                </li>
              {% endif %}
            {%- endfor %}
          </ul>
          {% if post.data.title %}
            <p class="post-title h5">{{ post.data.title }}</p>
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
          {% if post.data.description %}
            <p>{{ post.data.description }}</p>
          {% endif %}
          {%- if post.date %}
            <div class="date-time">
              <time class="post-date" datetime="{{ post.date | dateStringISO }}">
                {{ post.date | dateFilter }}
              </time>
              <span class="middle-dot">&middot;</span>
              <span class="read-time">{{ post | readingTime }} read</span>
            </div>
          {% endif %}
        </div>
      </a>
    </li>
  {% endfor %}
</ul>
